pipeline{
        agent any
	        stages {
		        stage('One') {
			             steps {
				            echo 'Hi, this is Pavan'
				     }
		        }
                        stage('Two') {
			              steps {
				             input('B.E Mechanical Engineering')
				      }
		        }
                        stage('Three') {
			       when {
			             not {
				           branch "Pavan"
				     }
			       }
			                   steps {
			                          echo "hello"
			                   }
			}
stage('Four') {
               parllel {
                       stage('Unit test') {
	                                  steps {
			                         echo "Running the unit test..."
		                          }	
                       }
                       stage('Integration test') {
		                                  agent {
				                         docker {
						                 reusenode false
							         image 'Ubuntu'
						          }	    
					           }
				                   steps {
		                                          echo 'Running the integration test..
					           }
	                 }
               }
}
}
